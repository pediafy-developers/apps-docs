---
// Redirect from base to /en/ pages
import { indonesiaPages } from '~/content';
import { stripLangFromSlug } from '~/utils/path-utils';

export async function getStaticPaths() {
	return indonesiaPages.map((page) => {
		return {
			params: {
				idRedirectSlug: stripLangFromSlug(page.id),
			},
			props: {
				indonesiaSlug: page.id,
			},
		};
	});
}
---

<meta http-equiv="refresh" content={`0;url=/${Astro.props.indonesiaSlug}`} />
