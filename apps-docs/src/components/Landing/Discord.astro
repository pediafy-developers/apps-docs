---
import { Image } from 'astro:assets';
import HoustonLove from '~/assets/houston_omg.png';
import Button from '~/components/Button.astro';

const { title, cta } = Astro.props;
---

<div class="discord">
	<h2>{title}</h2>
	<div class="cta">
		<Image src={HoustonLove} alt="pediafy" class="hide" />
		<Button variant="secondary" link="https://discord.com/">{cta}</Button>
	</div>
</div>

<style>
	.discord {
		margin: 0 auto;
		padding: 1rem 1;
		text-align: center;
	}

	.discord h2 {
		font-size: var(--sl-text-2xl) !important;
		font-weight: 400;
	}

	.discord .cta {
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	.hide {
		margin-bottom: 0rem;
		width: 5rem;
		height: 5rem;
	}
</style>
